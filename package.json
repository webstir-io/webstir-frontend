{
  "name": "@webstir-io/webstir-frontend",
  "version": "0.1.20",
  "description": "Frontend build and publish tooling for Webstir workspaces.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "default": "./dist/core/index.js"
    },
    "./builders": {
      "types": "./dist/builders/index.d.ts",
      "import": "./dist/builders/index.js",
      "default": "./dist/builders/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "default": "./dist/cli.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "webstir-frontend": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "test": "npm run clean && npm run build && node -e \"const { spawnSync } = require('node:child_process'); const glob = require('glob'); const files = glob.sync('tests/**/*.test.js'); if (!files.length) { console.error('No frontend test files found'); process.exit(1); } const result = spawnSync(process.execPath, ['--test', ...files], { stdio: 'inherit' }); process.exit(result.status ?? 1);\"",
    "prepare": "npm run build",
    "smoke": "npm run build && node scripts/smoke.mjs",
    "release": "bash scripts/publish.sh"
  },
  "files": [
    "dist",
    "src",
    "scripts",
    "tests",
    "tsconfig.json",
    "package-lock.json"
  ],
  "engines": {
    "node": ">=20.18.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webstir-io/webstir-frontend"
  },
  "keywords": [
    "webstir",
    "frontend",
    "cli"
  ],
  "author": "Webstir",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "dependencies": {
    "@webstir-io/module-contract": "^0.1.10",
    "autoprefixer": "^10.4.18",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^12.1.0",
    "csso": "^5.0.5",
    "esbuild": "^0.25.10",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.1",
    "highlight.js": "^11.11.1",
    "html-minifier-terser": "^7.2.0",
    "marked": "^12.0.2",
    "postcss": "^8.4.47",
    "sharp": "^0.33.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/csso": "^5.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^20.11.25",
    "typescript": "^5.7.2"
  }
}
